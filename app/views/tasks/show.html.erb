<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are sure you?"} %>
<%= link_to 'Back', tasks_path %>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>
